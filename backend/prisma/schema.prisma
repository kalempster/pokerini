generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @default(cuid()) @id
  email         String  @unique
  username      String  @unique
  password      String
  chips         Int     @default(100000)
  // Token         Token[]
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt


}
